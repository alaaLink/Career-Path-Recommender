@{
    ViewData["Title"] = "Password Reset Email Sent";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo success">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="auth-title">Check Your Email</h1>
            <p class="auth-subtitle">We've sent password reset instructions to your email address</p>
        </div>

        <div class="auth-content">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <div>
                    <strong>What's next?</strong>
                    <ul class="mb-0 mt-2">
                        <li>Check your email inbox (and spam folder)</li>
                        <li>Click the reset link in the email</li>
                        <li>Follow the instructions to create a new password</li>
                    </ul>
                </div>
            </div>

            <div class="auth-help">
                <p><strong>Didn't receive the email?</strong></p>
                <ul>
                    <li>Check your spam or junk folder</li>
                    <li>Make sure you entered the correct email address</li>
                    <li>The email may take a few minutes to arrive</li>
                </ul>
            </div>
        </div>

        <div class="auth-footer">
            <p><a asp-action="Login" class="auth-link">Back to Sign In</a></p>
            <p><a asp-action="ForgotPassword" class="auth-link">Try a different email</a></p>
        </div>
    </div>
</div>

<style>
    .auth-logo.success {
        color: #28a745;
    }
    
    .auth-help {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
    }
    
    .auth-help ul {
        margin: 10px 0 0 0;
        padding-left: 20px;
    }
    
    .auth-help li {
        margin-bottom: 5px;
    }
</style>
