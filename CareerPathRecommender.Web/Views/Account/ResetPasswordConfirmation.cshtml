@{
    ViewData["Title"] = "Password Reset Complete";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo success">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="auth-title">Password Reset Complete</h1>
            <p class="auth-subtitle">Your password has been successfully reset</p>
        </div>

        <div class="auth-content">
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <div>
                    <strong>Success!</strong> Your password has been updated. You can now sign in with your new password.
                </div>
            </div>

            <div class="auth-actions">
                <a asp-action="Login" class="btn btn-primary btn-auth">
                    <i class="fas fa-sign-in-alt"></i>
                    Sign In Now
                </a>
            </div>
        </div>

        <div class="auth-footer">
            <p>Need help? <a href="#" class="auth-link">Contact Support</a></p>
        </div>
    </div>
</div>

<style>
    .auth-logo.success {
        color: #28a745;
    }
    
    .auth-actions {
        text-align: center;
        margin: 20px 0;
    }
    
    .auth-actions .btn {
        min-width: 200px;
    }
</style>
