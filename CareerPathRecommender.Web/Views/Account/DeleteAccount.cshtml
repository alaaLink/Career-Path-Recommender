@model DeleteAccountViewModel
@{
    ViewData["Title"] = "Delete Account";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo error">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1 class="auth-title">Delete Account</h1>
            <p class="auth-subtitle">This action cannot be undone. Please proceed with caution.</p>
        </div>

        <div class="alert alert-danger" role="alert">
            <i class="fas fa-warning"></i>
            <strong>Warning:</strong> Deleting your account will permanently remove all your data, including:
            <ul class="mt-2">
                <li>Your profile and personal information</li>
                <li>All skill assessments and progress</li>
                <li>Career recommendations and history</li>
                <li>Project assignments and course enrollments</li>
            </ul>
        </div>

        <form asp-action="DeleteAccount" method="post" class="auth-form" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock"></i>
                    Current Password
                </label>
                <div class="password-input">
                    <input asp-for="Password" class="form-control" placeholder="Enter your current password to confirm" />
                    <button type="button" class="password-toggle" onclick="togglePassword('Password')">
                        <i class="fas fa-eye" id="Password-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmationText" class="form-label">
                    <i class="fas fa-keyboard"></i>
                    Type "DELETE" to confirm
                </label>
                <input asp-for="ConfirmationText" class="form-control" placeholder="Type DELETE in capital letters" />
                <span asp-validation-for="ConfirmationText" class="text-danger"></span>
                <small class="form-text text-muted">Please type exactly: <strong>DELETE</strong></small>
            </div>

            <div class="form-group">
                <div class="terms-checkbox">
                    <input asp-for="ConfirmDeletion" type="checkbox" id="confirmDeletion" required>
                    <label for="confirmDeletion">
                        I understand that this action is permanent and cannot be undone
                    </label>
                </div>
                <span asp-validation-for="ConfirmDeletion" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger btn-auth" id="deleteAccountBtn" disabled>
                <i class="fas fa-trash-alt"></i>
                Delete My Account Permanently
                <div class="btn-loading">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </button>
        </form>

        <div class="auth-footer">
            <p><a asp-action="Index" asp-controller="Dashboard" class="auth-link">Cancel and go back to Dashboard</a></p>
        </div>
    </div>
    
    <div class="auth-features">
        <div class="feature-item">
            <i class="fas fa-download"></i>
            <h3>Export Your Data</h3>
            <p>Consider downloading your data before deletion if you want to keep a copy</p>
        </div>
        <div class="feature-item">
            <i class="fas fa-user-times"></i>
            <h3>Account Deactivation</h3>
            <p>If you're unsure, consider temporarily deactivating instead of deleting</p>
        </div>
        <div class="feature-item">
            <i class="fas fa-life-ring"></i>
            <h3>Need Help?</h3>
            <p>Contact our support team if you're having issues with your account</p>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Account Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-user-times text-danger" style="font-size: 3rem;"></i>
                </div>
                <h6 class="text-center mb-3">Are you absolutely sure you want to delete your account?</h6>
                <p class="text-muted text-center mb-0">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="finalDeleteBtn">
                    <i class="fas fa-trash-alt me-1"></i>Yes, Delete My Account
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle password visibility
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const eye = document.getElementById(fieldId + '-eye');
            
            if (field.type === 'password') {
                field.type = 'text';
                eye.classList.remove('fa-eye');
                eye.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                eye.classList.remove('fa-eye-slash');
                eye.classList.add('fa-eye');
            }
        }
        
        // Form validation function
        function validateForm() {
            const password = document.getElementById('Password').value;
            const confirmationText = document.getElementById('ConfirmationText').value;
            const confirmDeletion = document.getElementById('confirmDeletion').checked;
            
            const isFormValid = password && confirmationText === 'DELETE' && confirmDeletion;
            
            const deleteAccountBtn = document.getElementById('deleteAccountBtn');
            deleteAccountBtn.disabled = !isFormValid;
            
            if (isFormValid) {
                deleteAccountBtn.classList.remove('btn-disabled');
            } else {
                deleteAccountBtn.classList.add('btn-disabled');
            }
        }
        
        // Add event listeners to form fields
        document.addEventListener('DOMContentLoaded', function() {
            const formFields = ['Password', 'ConfirmationText'];
            
            formFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (field) {
                    field.addEventListener('input', validateForm);
                    field.addEventListener('change', validateForm);
                }
            });
            
            // Checkbox handler
            document.getElementById('confirmDeletion').addEventListener('change', validateForm);
            
            // Initial validation
            validateForm();
        });
        
        // Form submission with modal confirmation
        document.querySelector('.auth-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show the confirmation modal
            const modal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            modal.show();
        });
        
        // Handle final confirmation from modal
        document.getElementById('finalDeleteBtn').addEventListener('click', function() {
            const button = document.querySelector('.btn-auth');
            button.classList.add('loading');
            button.disabled = true;
            
            // Submit the form
            document.querySelector('.auth-form').submit();
        });
    </script>
}

<style>
    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    }
    
    .btn-danger:hover:not(:disabled) {
        background: linear-gradient(135deg, #ff5252 0%, #d63031 100%);
        box-shadow: 0 10px 20px rgba(255, 107, 107, 0.3);
    }
    
    .alert ul {
        margin-bottom: 0;
        padding-left: 1.2rem;
    }
    
    .alert li {
        margin-bottom: 0.25rem;
    }
</style>
